{
  "name": "sveltekit-static-sitemap",
  "version": "1.0.2",
  "description": "Generate sitemap at buildtime for SvelteKit applications with prerendered routes. Works with any adapter.",
  "main": "lib/index.js",
  "types": "lib/index.ts",
  "files": [
    "lib"
  ],
  "type": "module",
  "scripts": {
    "lint": "xo",
    "build": "rm -rf ./lib/; tsc",
    "build:watch": "tsc --watch",
    "test": "ava",
    "watch": "ava --watch",
    "docs": "typedoc --plugin typedoc-plugin-markdown --readme none --githubPages false ./src/index.ts",
    "prepublish": "npm run build && npm run test",
    "prepare": "husky install"
  },
  "keywords": [
    "sveltekit",
    "sitemap",
    "static",
    "prerender"
  ],
  "author": "Tobias Lundal",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@tsconfig/node-lts": "^18.12.5",
    "@tsconfig/strictest": "^2.0.2",
    "ava": "^5.3.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "typedoc": "^0.25.3",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.2.2",
    "xo": "^0.56.0"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^1.3.10"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "lib/"
      },
      "compile": false
    }
  },
  "xo": {
    "plugins": [
      "eslint-plugin-tsdoc"
    ],
    "rules": {
      "tsdoc/syntax": "warn",
      "import/extensions": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "comments": 80
        }
      ]
    }
  }
}
